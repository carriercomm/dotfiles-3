# Push and pop directories on directory stack
alias pu='pushd'
alias po='popd'

# Basic directory operations
alias ..='cd ..'
alias ...='cd ../..'
alias -- -='cd -'

# List direcory contents
alias lsa='ls -lah'
alias l='ls -lahG'
alias ll='ls -l'

# Safety with rm
alias rm='rm -i'

# Add to Instapaper
alias insta='python ~/.dotfiles/bin/instacli.py'

# Funkiller - disable time-wasting websites
alias funkiller='sudo bash ~/.dotfiles/bin/funkiller'

